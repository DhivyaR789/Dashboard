<head>
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.bars li .bar').each(function (key, bar) {
                var percentage = $(this).data('percentage');
                $(this).animate({ 'height': percentage + '%' }, 1000);
            });
        });
    </script>
</head>



<body>
    <style>
        *,
        *::after,
        *::before {
            margin: 0;
            padding: 0;
            box-sizing: inherit;
            font-size: 62, 5%;
        }

        .form__label {
            font-family: 'Roboto', sans-serif;
            font-size: 1.2rem;
            margin-left: 2rem;
            margin-top: 0.7rem;
            display: block;
            transition: all 0.3s;
            transform: translateY(0rem);
        }

        .form__input {
            font-family: 'Roboto', sans-serif;
            color: #333;
            font-weight: bolder;
            text-align: center;
            font-family: 'Franklin Gothic Medium';
            font-size: medium;
            margin-left: 1%;
            border-radius: 0.2rem;
            background-color: rgb(255, 255, 255);
            border: none;
            width: 200px;
            height: 30px;
            display: block;
            border-bottom: 0.3rem solid transparent;
            transition: all 0.3s;
        }

        .form__input:placeholder-shown+.form__label {
            opacity: 0;
            visibility: hidden;
            -webkit-transform: translateY(-4rem);
            transform: translateY(-4rem);
        }


        .zoom {
            transition: transform .2s;
            width: 200px;
            height: 200px;
        }

        .zoom:hover {
            transform: scale(1.5);
        }

        @import url('https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap');

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .waviy {
            position: relative;
            -webkit-box-reflect: below -20px linear-gradient(transparent, rgba(0, 0, 0, .2));
            font-size: 60px;
        }

        .waviy span {
            font-family: 'Alfa Slab One', cursive;
            position: relative;
            display: inline-block;
            color: #fff;
            text-transform: uppercase;
            animation: waviy 1s infinite;
            animation-delay: calc(.1s * var(--i));

        }

        @keyframes waviy {

            0%,
            40%,
            100% {
                transform: translateY(0)
            }

            20% {
                transform: translateY(-20px)
            }
        }

        @keyframes growProgressBar {

            0%,
            33% {
                --pgPercentage: 0;
            }

            100% {
                --pgPercentage: var(--value);
            }
        }

        @property --pgPercentage {
            syntax: '<number>';
            inherits: false;
            initial-value: 0;
        }

        div[role="progressbar"] {
            --size: 12rem;
            --fg: rgb(233, 35, 35);
            --bg: #def;
            --pgPercentage: var(--value);
            animation: growProgressBar 3s 1 forwards;
            width: var(--size);
            height: var(--size);
            border-radius: 50%;
            text-align: 5px;
            display: inline-flex;
            margin-left: 15%;
            padding-left: 2.5px;
            place-items: center;
            background:
                radial-gradient(closest-side, white 80%, transparent 0 99.9%, white 0),
                conic-gradient(var(--fg) calc(var(--pgPercentage) * 1%), var(--bg) 0);
            font-family: 'Franklin Gothic Medium';
            font-size: calc(var(--size) / 5);
            color: black;
        }

        div[role="progressbar"]::before {
            counter-reset: percentage var(--value);
            content: counter(percentage) '%';
        }

        @keyframes color {
            30% {
                background: rgb(142, 141, 141);
            }

            100% {
                background: #555;
            }
        }

        body {
            background-color: black;
            font-family: 'Gill Sans';
            color: rgb(255, 255, 255);
            font-weight: bold;
            font-size: large;
            margin-top: 0%;
        }

        .div1 {
            width: 250px;
            height: 50px;
            transition: 2s;
            background: black;
            position: relative;
            margin-left: 0%;
        }

        .div1:hover {
            width: 100%;
        }

        .sidebar {
            margin-top: 1%;
            height: 100%;
            width: 13%;
            background-color: rgba(46, 46, 46, 0.325);
            position: fixed;
            display: block;
            color: white;
        }

        .sidebar a {
            display: block;
            color: rgb(241, 238, 238);
            text-decoration: wavy;
            padding: 16px;
        }

        .sidebar a:hover {
            background-color: rgb(247, 247, 247);
            color: black;
        }

        .sidebar a:active {
            background-color: white;
        }

        .sidebar input {
            background-color: rgba(121, 121, 126, 0.325);
            font-size: medium;
            font-family: 'Franklin Gothic Medium';
            border-color: #555;
            color: white;
            width: 150px;
            height: 30px;
            box-shadow: inset;
            border-width: 0.5px;
            cursor: pointer;
        }

        .sidebar input:hover {
            background-color: #555;
            font-size: medium;
            font-family: 'Franklin Gothic Medium';
            border-color: #555;
            color: white;
            width: 150px;
            height: 30px;
            box-shadow: inset;
            border-width: 0.5px;
            cursor: pointer;
        }

        input{
            color: #333;
            text-align: center;
            height: 40px;
            border-radius: 10%;
            font-family: 'Gill Sans';
            font-weight: bolder ;
            font-size: large;
        }

        input:hover{
            background-color: #333;
            color: white;
        }
        .wrapper {
            display: block;
            margin: 5em auto;
            border: 1px solid rgb(242, 228, 228);
            background-color: aliceblue;
            width: 500px;
            height: 350px;
            position: relative;
        }

        p {
            text-align: center;
        }

        .label {
            height: 1em;
            padding: .3em;
            background: rgba(90, 89, 89, 0.8);
            position: absolute;
            display: none;
            color: rgb(247, 237, 237);
        }



        .chart {
            width: 100%;
            height: 50px;
            display: block;
        }

        .numbers {
            color: rgb(249, 239, 239);
            font-size: medium;
            display: inline-block;
        }

        .numbers li {
            list-style: none;
            height: 150px;
            position: relative;
            bottom: 145px;
        }

        button {
            background: rgb(250, 250, 250);
            font-family: 'Franklin Gothic Medium';
            font-size: medium;
            border-radius: 10%;
            width: 100px;
            height: 35px;
            box-shadow: inset;
            border: #fff;
            color: black;
            cursor: pointer;
        }

        button:hover{
            background-color: #555;
            color: white;
        }

        .numbers span {
            font-size: 12px;
            font-weight: 300;
            position: absolute;
            bottom: 0;
            right: 10px;
        }

        .number ul {
            list-style: circle;
            margin-top: 0px;
        }


        .bars {
            color: #fff;
            font-size: 12px;
            font-weight: 600;
            background: rgba(38, 37, 37, 0);
            display: inline-flex;
            padding-left: 5px;
            width: 300px;
            height: 200px;
            box-shadow: 0 0 10px #555;
            border-radius: 5px;

        }

        .bars li {
            display: table-cell;
            width: 100px;
            height: 150px;
            position: relative;
        }

        .bars span {
            width: 100%;
            bottom: -50px;
            position: absolute;
            text-align: center;
        }

        .bars .bar {
            display: block;
            background-color: rgb(180, 43, 43);
            width: 50px;
            position: absolute;
            bottom: 0;
            margin-left: 0px;
            text-align: center;
            box-shadow: 0 0 10px 0 rgba(243, 181, 82, 0.5);
            transition: 0.5s;

        }

        .bars .bar:hover {
            background-color: rgb(76, 178, 154);
            cursor: pointer;
        }

        .bars.bar::before {
            color: #fff;
            content: attr(data-percentage) '%';
            position: relative;
            bottom: 20px;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(1, 160px);
            margin: auto 0;
        }


        .container .box {
            width: 100%;
        }

        .box h2 {
            display: block;
            text-align: center;
            color: red;
        }

        .box .chart {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            font-size: 40px;
            line-height: 160px;
            height: 160px;
            color: #fff;
        }

        .box canvas {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            width: 100%;
        }
    </style>
    <div class="waviy" style="text-align:center;">
        <span style="--i:1;font-family:'Franklin Gothic Medium';">D</span>
        <span style="--i:2;font-family:'Franklin Gothic Medium';">A</span>
        <span style="--i:3;font-family:'Franklin Gothic Medium';">S</span>
        <span style="--i:4;font-family:'Franklin Gothic Medium';">H</span>
        <span style="--i:5;font-family:'Franklin Gothic Medium';">B</span>
        <span style="--i:6;font-family:'Franklin Gothic Medium';">O</span>
        <span style="--i:7;font-family:'Franklin Gothic Medium';">A</span>
        <span style="--i:8;font-family:'Franklin Gothic Medium';">R</span>
        <span style="--i:9;font-family:'Franklin Gothic Medium';">D</span>

    </div>


    <div class="sidebar" style="color: white;">
        <input type="button" onclick="ShowInput()" value="ShowInput"><br><br><br>
        <input type="button" onclick="ShowChart()" value="ShowChart">
    </div>
    <div id="chart-div">
        <% MovieList.forEach(movies=>{ %>
            <ul class="bars" style="margin-left: 15%;">
                <div class="zoom">
                    <li>
                        <div class="bar" data-percentage=<%=movies.s1 %>></div><span>S1</span>
                    </li>
                </div>
                <div class="zoom">
                    <li>
                        <div class="bar" data-percentage=<%=movies.s2 %>></div><span>S2</span>
                    </li>
                </div>
                <div class="zoom">
                    <li>
                        <div class="bar" data-percentage=<%=movies.s3 %>></div><span>S3</span>
                    </li>
                </div>
                <div class="zoom">
                    <li>
                        <div class="bar" data-percentage=<%=movies.s4 %>></div><span>S4</span>
                    </li>
                </div>
                <div class="zoom">
                    <li>
                        <div class="bar" data-percentage=<%=movies.s5 %>></div><span>S5</span>
                    </li>
                </div>
            </ul>
            <% }) %>
    </div>


    <br><br>

    <div id="input-div" style="margin-left: 15%;">
        <form action="/sign_up" method="post">
            <h4 style="color: white;font-family: 'Franklin Gothic Medium';">Enter Your ID</h4><br><br>
            <div class="form__group">
                <input type="text" class="form__input" id="name" placeholder="ID" required="" />
                <label for="name" class="form__label">ID</label>
            </div>
            <br><br>
            <h4 style="color: white;font-family: 'Franklin Gothic Medium';">Enter your scores</h4><br><br>
            <input type="text" name="s1" id="s1" placeholder="Score1">&ensp;
            <input type="text" name="s2" id="s2" placeholder="Score2">&ensp;
            <input type="text" name="s3" id="s3" placeholder="Score3">&ensp;
            <input type="text" name="s4" id="s4" placeholder="Score4">&ensp;
            <input type="text" name="s5" id="s5" placeholder="Score5">
            <br><br>
            <button>Submit</button><br><br>
        </form>

       
    </div>


    <br><br>
    <% MovieList.forEach(movies=>{ %>
        <div role="progressbar" style="--value:<%=movies.s1 %>"></div>
    <% }) %>
    
